{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Product",
  "type": "object",
  "properties": {
    "IDP": { "type": "number" },
    "name": { "type": "string" },
    "price": { "type": "number" },
    "brand": { "type": "string" },
    "description": { "type": "string", "format": "longstring"},
    "image_url": { "type": "string" },

    "categories": {
      "type": "array",
      "items": { 
        "type": "object",
        "properties": {
          "title": { "type": "string" }
        }
      }
    },

    "supplier": {
      "type": "object",
      "properties": {
        "IDS": { "type": "number" },
        "name": { "type": "string" },
        "SIRET": { "type": "number" },
        "headOffice": { "type": "string" },
        "revenue": { "type": "number" }
      },
      "required": [
        "IDS",
        "name",
        "SIRET",
        "headOffice",
        "revenue"
      ]
    },

    "stocks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "IDW": { "type": "number" },
          "quantity": { "type": "number" },
          "location": { "type": "string" }
        },
        "required": [
          "IDW",
          "quantity",
          "location"
        ]
      }
    }
  },

  "required": [
    "IDP",
    "name",
    "price",
    "brand",
    "description",
    "image_url",
    "categories",
    "supplier",
    "stocks"
  ]
}
