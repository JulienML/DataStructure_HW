{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Product",
  "type": "object",
  "properties": {
    "IDP": { "type": "number" },
    "name": { "type": "string" },
    "price": {
      "type": "object",
      "properties": {
        "value": { "type": "number" },
        "currency": { "type": "string" },
        "VAT": { "type": "number" }
      },
      "required": ["value", "currency", "VAT"]
    },
    "brand": { "type": "string" },
    "description": { "type": "string" },
    "image_url": { "type": "string" }
  },
  "required": [
    "IDP",
    "name",
    "price",
    "brand",
    "description",
    "image_url"
  ]
}
