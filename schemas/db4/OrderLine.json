{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OrderLine",
  "type": "object",
  "properties": {
    "product": {
      "type": "object",
      "properties": {
        "IDP": { "type": "number" },
        "name": { "type": "string" },
        "price": { "type": "number" },
        "brand": { "type": "string" },
        "description": { "type": "string", "format": "longstring"},
        "image_url": { "type": "string" },

        "categories": {
          "type": "array",
          "items": { 
            "type": "object",
            "properties": {
              "title": { "type": "string" }
            }
          }
        },

        "supplier": {
          "type": "object",
          "properties": {
            "IDS": { "type": "number" },
            "name": { "type": "string" },
            "SIRET": { "type": "number" },
            "headOffice": { "type": "string" },
            "revenue": { "type": "number" }
          },
          "required": [
            "IDS",
            "name",
            "SIRET",
            "headOffice",
            "revenue"
          ]
        }
      },

      "required": [
        "IDP",
        "name",
        "price",
        "brand",
        "description",
        "image_url",
        "categories",
        "supplier"
      ]
    },
    "IDC": { "type": "number" },
    "date": { "type": "string", "format": "date" },
    "quantity": { "type": "number" },
    "deliveryDate": { "type": "string", "format": "date" },
    "comment": { "type": "string", "format": "longstring" },
    "grade": { "type": "number" }
  },
  "required": [
    "product",
    "IDC",
    "date",
    "quantity",
    "deliveryDate"
  ]
}
